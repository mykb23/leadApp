doctype html
html(lang="en")
  include partials/head.pug
  +head("Starter MVP")
  body
    h1= title
    p Welcome to #{title}
    form(action="/", method="POST")
      input(name="lead_email", type="text", placeholder="Enter your email address")
      button(type="submit") Submit
    if leads
      h1 Leads
      for lead in leads
        p(id=lead.id) 
          span #{lead.email}
          |
          a(href="/lead/" + lead.id) Details
          | 
          button(onclick=`deleteLead('${lead.id}')`) Delete
  include partials/footer.pug
  +footer()
